<%- include("partials/header") -%>

<div class="facture-body">
  <div class="facture-body-left">
    <h1>Factures</h1>
    <div class="facture-filtres-container">
      <div class="facture-filtres-champs">
        <div class="facture-filtre">
          <input type="checkbox" name="checkbox" />
          <select name="filtre-champ" class="filtre-champ" id="filtre-champ-1">
            <option value="client">Client</option>
            <option value="operateur">Opérateur</option>
            <option value="matiere">Matière</option>
            <option value="durete">Dureté</option>
            <option value="designation">Désignation</option>
            <option value="qte">QTE</option>
            <option value="poids">Poids</option>
            <option value="prof">Prof</option>
            <option value="drtObt">DrtObt</option>
            <option value="date">Date</option>
            <option value="statut">Statut</option>
            <option value="livraison">Livraison</option>
          </select>
          <select name="filtre-type" class="filtre-type" id="filtre-type-1">
            <option value="=">Égale à</option>
            <option value="!=">Différent de</option>
            <option value="<">Inférieur</option>
            <option value="<=">Inférieur ou égale à</option>
            <option value=">">Supérieur</option>
            <option value=">=">Supérieur ou égale à</option>
          </select>
          <input
            type="text"
            name="filtre-valeur"
            class="filtre-valeur"
            id="filtre-valeur-1"
          />
          <button
            type="button"
            class="remove-filtre"
            data-filtre-id="1"
            name="filtre-bouton"
          >
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </div>
      </div>
      <div class="facture-filtres-boutons">
        <button id="appliquer-filtre">Appliquer</button>
        <button id="ajouter-filtre"><i class="fa-solid fa-plus"></i></button>
      </div>
    </div>
    <div class="facture-button">
      <div class="facture-button-left">
        <button class="ajouter-nouveau" id="facture-ajouter-nouveau" type="button">
          <i class="bx bxs-plus-circle"></i>Ajouter Nouveau
        </button>
        <button id="facture-imprimer" type="button">
          <i class="bx bx-printer"></i>
        </button>
        <button id="facture-filtrer" type="button">
          <i class="fa-solid fa-sliders"></i>
        </button>
        <button id="facture-pdf" type="button">
          <i class="fa-solid fa-file-pdf"></i>
        </button>
      </div>
      <div class="facture-button-right">
        <button id="facture-generer-rapport" type="button">
          <i class="bx bxs-file-export"></i>Facturer
        </button>
      </div>
    </div>

    <div class="facture-table-container">
      <div id="tableau-factures"></div>
    </div>
  </div>
  <div class="facture-body-right">
    <form action="#" method="post">
      <label for="blNumber">BL (number):</label>
      <input type="text" id="blNumber" name="blNumber" required /><br />

      <label for="bcNumber">BC N°:</label>
      <input type="text" id="bcNumber" name="bcNumber" required /><br />

      <label for="matiere">Matière:</label>
      <input type="text" id="matiere" name="matiere" required /><br />

      <label for="designation">Désignation:</label>
      <input type="text" id="designation" name="designation" required /><br />

      <label for="traitement">Traitement:</label>
      <input type="text" id="traitement" name="traitement" required /><br />

      <label for="nbrePiece">Nbre/pièce:</label>
      <input type="number" id="nbrePiece" name="nbrePiece" required /><br />

      <label for="poids">Poids(kg):</label>
      <input type="number" id="poids" name="poids" required /><br />

      <label for="puht">P.U.H.T(kg):</label>
      <input type="number" id="puht" name="puht" required /><br />

      <label for="ptht">P.T.H.T(kg):</label>
      <input type="number" id="ptht" name="ptht" required /><br />

      <input type="submit" value="Submit" />
    </form>
  </div>
</div>
<%- include("partials/ajouter-facture-formulaire") -%>
<%- include("partials/footer") -%>
