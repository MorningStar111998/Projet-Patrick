<div class="ajouter-facture-body">
  <div class="ajouter-facture-body-formulaire">
    
    <form action="" id="ajouter-facture-formulaire">
        <div class="infos-Client">

            <h3>Rubrique Client:</h3>
            
            <label for="raisonSociale">Raison sociale:</label>
            <select id="raisonSociale" class="select2" required>
                <!-- Options for Raison sociale (populate as needed) -->
                <option value="company1">Company 1</option>
                <option value="company2">Company 2</option>
                <!-- Add more options as needed -->
            </select>
            
            <label for="ice">ICE:</label>
            <input type="text" id="ice" name="ice" required>
            
            <label for="nomContact">Nom contact:</label>
            <input type="text" id="nomContact" name="nomContact" required>
            
            <label for="tel">Tel:</label>
            <input type="tel" id="tel" name="tel" required>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="adresseFacturation">Adresse de facturation:</label>
            <input type="text" id="adresseFacturation" name="adresseFacturation" required>
            
            <label for="adresseLivraison">Adresse de livraison:</label>
            <input type="text" id="adresseLivraison" name="adresseLivraison" required>
        </div>
<div class="infos-generales">

    <h3>Rubrique Infos générales:</h3>
    
    <label for="dateFacture">Date de la facture:</label>
    <input type="date" id="dateFacture" name="dateFacture" required>
    
    <label for="dateLivraison">Date de livraison:</label>
    <input type="date" id="dateLivraison" name="dateLivraison" required>
    
    <label for="totalHt">Total HT:</label>
    <input type="number" id="totalHt" name="totalHt" required>
    
    <label for="tauxTva">Taux Tva:</label>
    <input type="number" id="tauxTva" name="tauxTva" required>
    
    <label for="totalTtc">Total TTC:</label>
    <input type="number" id="totalTtc" name="totalTtc" required>
    
    <button type="submit">Submit</button>
</div>
</form>
</div>
<div class="ajouter-facture-body-viewer"></div>
</div>
